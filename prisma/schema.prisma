generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
  id        String      @id @default(uuid())
  name      String
  type      String      // ex: "fruta", "leguminosa"
  kcal      Float
  createdAt DateTime    @default(now())
  imageUrl  String

  shifts    FoodShift[]
  foodMeals FoodMeal[]
}

model Meal {
  id        String       @id @default(uuid())
  title     String
  createdAt DateTime     @default(now())

  foodMeals FoodMeal[]
}

model Shift {
  id    String      @id @default(uuid())
  name  String      @unique              // ex: "café da manhã", "almoço"
  foods FoodShift[]
}

model FoodShift {
  id      String   @id @default(uuid())
  foodId  String
  shiftId String

  food    Food     @relation(fields: [foodId], references: [id])
  shift   Shift    @relation(fields: [shiftId], references: [id])

  @@unique([foodId, shiftId])
}

model FoodMeal {
  id        String   @id @default(uuid())
  foodId    String
  mealId    String
  quantity  Float    // ✔️ Quantidade usada nessa refeição (em gramas, por exemplo)

  food      Food     @relation(fields: [foodId], references: [id])
  meal      Meal     @relation(fields: [mealId], references: [id])

  @@unique([foodId, mealId])
}
