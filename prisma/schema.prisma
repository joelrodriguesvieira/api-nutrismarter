
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FoodType {
  Frutas
  Proteinas
  Verduras
  Leguminosas
  Cereais
  Graos
  Laticinios
  Oleaginosas
  Chas
}

model Food {
  id        String      @id @default(uuid())
  name      String
  type      FoodType
  kcal      Float
  createdAt DateTime    @default(now())
  imageUrl  String
  foodMeals FoodMeal[]
}

model Meal {
  id        String       @id @default(uuid())
  title     String
  createdAt DateTime     @default(now())
  foodMeals FoodMeal[]
}

model FoodMeal {
  id        String   @id @default(uuid())
  foodId    String
  mealId    String
  quantity  Float

  food      Food     @relation(fields: [foodId], references: [id])
  meal      Meal     @relation(fields: [mealId], references: [id])

  @@unique([foodId, mealId])
}